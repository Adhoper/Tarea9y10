@model Tarea9y10.Models.AplicacionDbContext

@{
    ViewData["Title"] = "Index";

    AplicacionDbContext bd = new AplicacionDbContext();
    string[] Columnas = new string[] { "ID", "Imagen", "Nombre", "Apellido", "Fecha de Nacimiento", "Sexo", "Pais de Nacimiento", "Ciudad de Nacimiento", "Pais de Residencia Actual", "Ciudad de Residencia Actual", "Telefono", "Celular", "Email" };
}

<h1>Index</h1>

<!--Este index es de prueba-->

<table class="table">
    <thead>
        <tr>
            @foreach (var item in Columnas)
            {

                <th>@item</th>

            }
        </tr>
    </thead>
    @foreach (var datos in bd.Integrantes)
    {

        <tr>
            <td style='font-family: Arial;'>
                @datos.IntegranteId
            </td>
            <td style='font-family: Arial;'>
                <img class="img-thumbnail img-fluid" src="~/Imagenes2x2/@datos.Foto" width="200" />
            </td>
            <td style='font-family: Arial;'>
                @datos.Nombres
            </td>
            <td style='font-family: Arial;'>
                @datos.Apellidos
            </td>
            <td style='font-family: Arial;'>
                @datos.FechaNacimiento.ToString("dd/MM/yyyy")
            </td>
            <td style='font-family: Arial;'>
                @datos.Sexo
            </td>
            <td style='font-family: Arial;'>
                @datos.PaisNacimiento
            </td>
            <td style='font-family: Arial;'>
                @datos.CiudadNacimiento
            </td>
            <td style='font-family: Arial;'>
                @datos.PaisResidenciaAct
            </td>
            <td style='font-family: Arial;'>
                @datos.CiudadResidenciaAct
            </td>
            <td style='font-family: Arial;'>
                @datos.Telefono
            </td>
            <td style='font-family: Arial;'>
                @datos.Celular
            </td>
            <td style='font-family: Arial;'>
                @datos.Email
            </td>

        </tr>
    }


</table>


