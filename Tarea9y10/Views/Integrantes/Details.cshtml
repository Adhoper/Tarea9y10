        <td>@eclesiastic.CantVecesDisciplina</td>
        <td>@eclesiastic.CausaDisciplina</td>
        <td>@eclesiastic.DenominacionPerteneciente</td>
        <td>@eclesiastic.DiosLlamado</td>
        <td>@eclesiastic.Disciplinatura</td>
        <td>@eclesiastic.FechaAceptadoIglesia</td>
